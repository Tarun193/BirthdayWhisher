<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/topBar"
        background="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="424dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topBar"
        >

        <EditText
            android:id="@+id/editEmail"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editPassword"
            style="@style/Widget.App.EditText"
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="4dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/SignupLink"
            style="@style/Widget.App.TextView.SignupLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create a New Account" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button"
            style="Widget.MaterialComponents.Button.UnelevatedButton.Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:text="Login"
            android:textSize="20sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/Google"
            style="Widget.MaterialComponents.Button.UnelevatedButton.Container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:text="@string/google_signin"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:backgroundTint="@color/google_signin_bg"
            app:icon="@drawable/googleg_standard_color_18"
            app:iconGravity="textStart"
            app:iconPadding="8dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>