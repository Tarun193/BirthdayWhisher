    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_signup"
    >
    <fragment
        android:id="@+id/fragment_signup"
        android:name="com.example.birthdaywhisher.SignupFragment"
        tools:layout="@layout/fragment_signup"
        >
        <action
            android:id="@+id/action_fragment_signup_to_fragment_login"
            app:destination="@id/fragment_login" />
    </fragment>
    <fragment
        android:id="@+id/fragment_login"
        android:name="com.example.birthdaywhisher.LoginFragment"
        tools:layout="@layout/fragment_login"
